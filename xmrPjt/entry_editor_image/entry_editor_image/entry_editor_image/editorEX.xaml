<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="entry_editor_image.editorEX">
    <ContentPage.Content>
        <StackLayout Margin="30">
            <Editor BackgroundColor="Yellow"
                    TextColor="Wheat"
                    FontAttributes="Bold" 
                    Placeholder="너의 메시지." 
                    IsReadOnly="True"/>
            <!--Placeholder는 기본적으로 표시되는 문구, IsReadOnly 오직 읽기 전용-->
            <Editor x:Name="eMSG"
                    BackgroundColor="White"
                    Placeholder="너의 메시지를 입력해."
                    VerticalOptions="FillAndExpand"/> <!--나머지 공간을 꽉채움-->
            <Button Text="Confirm" Clicked="Button_Clicked_1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>