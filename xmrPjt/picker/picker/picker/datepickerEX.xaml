<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="picker.datepickerEX">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <DatePicker x:Name="dp01"
                        MinimumDate="01/01/2020"
                        MaximumDate="12/31/2024"
                        Date="01/01/2021"
                        HorizontalOptions="Center"
                        FontSize="30"
                        DateSelected="dp01_DateSelected"/> <!--픽할수 있는 최소, 최대 값을 지정했고, 띄웠을때 디폴트 날자를 지정했음 -->
            <Label x:Name="label01"
                   Padding="10"
                   FontSize="20"
                   TextColor="Black"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>